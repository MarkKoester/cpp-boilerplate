{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build all",
            "type": "shell",
            "command": "cmake --build build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "CMake",
            "type": "shell",
            "command": "cmake -B build -S .",
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}
